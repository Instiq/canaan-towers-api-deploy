{
    "openapi": "3.0.1",
    "info": {
        "title": "Canaan Towers",
        "description": "Canaan Towers API",
        "termsOfService": "https://google.com",
        "contact": {
          "name": "Canaan Towers services Ltd",
          "url": "https://google.com",
          "email": ""
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "v1"
    },
    "host": "canaan-towers-api.herokuapp.com/",
    "basePath": "",
    "tags": [
        {
            "name": "User",
            "description": "API for Users in the system"
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "schemes": [
      "http",
      "https"
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get all Users in system",
                "responses": {
                    "200": {
                      "description": "Success",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/UserInfo"
                          }
                        }
                      }
                    }
                }
            },
            "post": {
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/UserRegistrationModel"
                        }
                      }
                    }
                },
                "responses": {
                    "200": {
                      "description": "Success",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/UserInfo"
                          }
                        }
                      }
                    }
                },
                "summary": "User registers in system"
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/UserLoginModel"
                        }
                      }
                    }
                },
                "responses": {
                    "200": {
                      "description": "Success",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/AuthenticationResponse"
                          }
                        }
                      }
                    }
                }
            }
        },
        "/users/profile": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "User view profile",
                "responses": {
                    "200": {
                      "description": "Success",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/UserInfo"
                          }
                        }
                      }
                    }
                }
            },
            "patch": {
                "tags": [
                    "User"
                ],
                "summary": "User Updates profile",
                "requestBody": {
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/UserRegistrationModel"
                        }
                      }
                    }
                },
                "responses": {
                    "200": {
                      "description": "Success",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/UserInfo"
                          }
                        }
                      }
                    }
                }
            }
        },
        "/users/logout": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User logouts profile",
                "responses": {
                    "200": {
                      "description": "Success",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/UserInfo"
                          }
                        }
                      }
                    }
                }
            }
        },
        "/users/delete": {
            "delete": {
                "tags": [
                    "User"
                ],
                "summary": "User deletes profile",
                "responses": {
                    "200": {
                      "description": "Success",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/UserInfo"
                          }
                        }
                      }
                    }
                }
            }
        }

        


    },
    "components": {
      "schemas": {
        "UserRegistrationModel": {
          "required": [
            "email",
            "firstName",
            "lastName",
            "password",
            "phoneNumber"
          ],
          "type": "object",
          "properties": {
            "firstName": {
              "maxLength": 100,
              "minLength": 2,
              "type": "string"
            },
            "lastName": {
              "maxLength": 100,
              "minLength": 2,
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "phoneNumber": {
              "maxLength": 14,
              "minLength": 14,
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "UserInfo": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid"
            },
            "firstName": {
              "type": "string",
              "nullable": true
            },
            "lastName": {
              "type": "string",
              "nullable": true
            },
            "email": {
              "type": "string",
              "nullable": true
            },
            "number": {
              "type": "string",
              "nullable": true
            }
          },
          "additionalProperties": false
        },
        "UserLoginModel": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "nullable": true
            },
            "password": {
              "type": "string",
              "nullable": true
            }
          },
          "additionalProperties": false
        },
        "AuthToken": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
        "AuthenticatedResponseUserModel": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid"
            },
            "firstName": {
              "type": "string",
              "nullable": true
            },
            "lastName": {
              "type": "string",
              "nullable": true
            },
            "email": {
              "type": "string",
              "nullable": true
            },
            "phoneNumber": {
              "type": "string",
              "nullable": true
            }
          },
          "additionalProperties": false
        },
        "AuthenticationResponse": {
          "type": "object",
          "properties": {
            "user": {
              "$ref": "#/components/schemas/AuthenticatedResponseUserModel"
            },
            "token": {
                "type": "string",
                "nullable": true
            }
          },
          "additionalProperties": false
        }
      },
      "securitySchemes": {
        "Bearer": {
          "type": "http",
          "description": "Enter JWT Bearer token",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "security": [
      {
        "Bearer": [ ]
      }
    ]
  }